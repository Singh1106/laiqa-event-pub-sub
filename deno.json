{
  "tasks": {
    "start": "deno run --allow-net --env-file --allow-env --allow-read main.ts",
    "start:memory": "BROKER_TYPE=memory deno run --allow-net --allow-env --allow-read main.ts",
    "dev": "deno run --allow-net --allow-env --allow-read --watch main.ts",
    "test": "deno test --allow-net --allow-env main_test.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "mqtt": "npm:mqtt@^5.13.1",
    "redis": "npm:redis@^5.5.6"
  },
  "compilerOptions": {
    "strict": true,
    "exactOptionalPropertyTypes": true
  }
}
